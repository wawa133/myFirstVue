{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", 
    "src/*.vue", 
    "src/**/*", 
    "src/**/*.vue", 
    "src/stores/*.ts",
    "src/stores/*.ts",
    "src/components/*.vue",
    "src/components/**/*.vue",
   ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
